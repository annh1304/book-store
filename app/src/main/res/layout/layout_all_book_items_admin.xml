<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="290dp"
    android:layout_marginBottom="-20dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/backGroundAllBook">

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="2dp"
        app:cardElevation="10dp"
        android:layout_marginLeft="10dp">

    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/ivDeleteBookAdmin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icondelete"
                android:layout_marginLeft="130dp"/>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/imageNewBooktest"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tvTitletest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text="Doraemon"
                android:textSize="18dp"
                android:textAlignment="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tvPricetest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200000"
                android:textSize="17dp"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>