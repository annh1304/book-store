<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.activities.WelcomeActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/colorBackground"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-100dp"
        app:cardCornerRadius="100dp"/>

    <ImageView
        android:id="@+id/imgWelcome"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_welcome" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to BookStore"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tvWelcome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Five Team"
        android:layout_marginLeft="120dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:layout_gravity="center"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:backgroundTint="@color/colorBackground"
        app:cardCornerRadius="350dp"
        android:layout_marginLeft="-130dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>