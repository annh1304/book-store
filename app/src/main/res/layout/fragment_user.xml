<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/a2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10000dp">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/avt" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="35dp"
            android:paddingTop="25dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="User name"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edtUserName"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:background="#00000000"
                android:inputType="textNoSuggestions"
                android:textColor="@color/mauchudennhat"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln3"
            android:orientation="vertical"

            android:paddingLeft="35dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Email"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3"
                android:background="#00000000"
                android:inputType="textNoSuggestions"
                android:textColor="@color/mauchudennhat"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ln3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln2"
            android:orientation="vertical"

            android:paddingLeft="35dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Phone"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv5"
                android:background="#00000000"
                android:inputType="textNoSuggestions"
                android:textColor="@color/mauchudennhat"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln4"
            android:orientation="vertical"

            android:paddingLeft="35dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Address"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:inputType="textNoSuggestions"
                android:textColor="@color/mauchudennhat"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln1"
            android:orientation="vertical"

            android:paddingLeft="35dp"
            android:paddingTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Date"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edtDate"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:inputType="textNoSuggestions"
                android:textColor="@color/mauchudennhat"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ln5"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="35dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="#1B6E62"
                    android:text="SAVE"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <Button
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="#1B6E62"
                    android:id="@+id/btnCancelUpdate"
                    android:text="CANCEL"
                    android:textSize="18dp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
</FrameLayout>