<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_insertBook"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorBackground"></ImageView>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-180dp"
            android:src="@drawable/iconback" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="-35dp"
            android:text="Book Detail"
            android:textColor="@color/white"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/btnSaveAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="340dp"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-120dp">

        <LinearLayout
            android:id="@+id/ln6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageViewDetail"
                android:layout_width="180dp"
                android:layout_height="245dp"
                android:layout_marginLeft="115dp"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <EditText
            android:id="@+id/tvBookNameDetailAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln6"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:background="@color/white"
            android:hint="Book name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/tvBookAuthorDetailAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBookNameDetailAD"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Author"
            android:textAlignment="center"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Type"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnTypeBook"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:hint="novel"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Page"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tvBookPageDetailAD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:hint="count"
                android:textSize="20dp"
                android:background="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Price"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tvBookPriceDetailAD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="200000"
                android:textColor="@color/red"
                android:textSize="20dp"
                android:background="@color/white"/>

        </LinearLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="240dp">

            <EditText
                android:id="@+id/tvBookIntroductionAD"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:hint="Câu chuyện xoay quanh sinh viên trẻ Rodion Romanovich Raskolnikov (nói rằng nhanh hơn mười lần), một thanh niên thông minh nhưng gặp rắc rối, người đã chuẩn bị cho một vụ giết người hoàn hảo của một tiệm cầm đồ tàn ác. Tuy nhiên, sau vụ giết người, Raskolnikov bị mắc kẹt trong sự tồn tại tội lỗi của mình, khiến anh ta phát điên khi mẹ và em gái của anh ta cùng anh ta đến St"
                android:textSize="20dp" />
        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>
</ScrollView>